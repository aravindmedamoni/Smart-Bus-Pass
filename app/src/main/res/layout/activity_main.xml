<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical">


    <ImageView
        android:id="@+id/ts_rtc"
        android:layout_gravity="center"
        android:src="@drawable/tsrtc"
        android:layout_width="wrap_content"
        android:layout_height="160dp" />
    <TextView
        android:text="WELCOME TO TSRTC"
        android:layout_gravity="center"
        android:textColor="#d81b99"
        android:layout_marginTop="30dp"
        android:textSize="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/usrmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textEmailAddress"
        android:textColorHint="#FF09090A"
        android:hint="Enter your e-mail"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColorHint="#FF09090A"
        android:inputType="textPassword"
        android:hint="Enter your password"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <Button
        android:id="@+id/loginbtn"
        android:onClick="login"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_button"
        android:text="Login"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textColor="#FAD02E"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/forgotpswd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Forget Passowrd!"
            android:textSize="20dp"
            android:textColor="#d81b99"
            android:layout_weight="1"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/rgstrtv"
            android:layout_marginTop="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="New?RegisterNow!"
            android:textAllCaps="false"
            android:onClick="register"
            android:layout_marginLeft="20dp"
            android:textColor="#d81b99"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    </LinearLayout>

</LinearLayout>